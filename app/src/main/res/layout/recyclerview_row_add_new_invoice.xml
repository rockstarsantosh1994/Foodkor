<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    app:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    app:elevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"

                android:layout_marginBottom="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/t1"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:visibility="gone"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/t2"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t1"
                    android:textStyle="bold"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/t3"
                    style="@style/Widget.AppCompat.ButtonBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/t4"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/t3"
                    android:layout_below="@id/t2"
                    android:gravity="end"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/t5"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t4"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/t6"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t5"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/t7"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t6"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/t8"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t7"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/t9"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t8"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/t10"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t9"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/t11"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t9"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/t12"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t11"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/t13"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t12"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/t14"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t13"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/t15"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t14"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/t16"
                    style="@style/Theme.AppCompat.DayNight.DarkActionBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t15"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/ib_delete"
                    android:background="@drawable/ic_delete" />


            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.v7.widget.CardView>

