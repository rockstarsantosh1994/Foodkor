<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xxovek.foodkor.LOGIN_AND_REGISTRATION.SignUpFragment"
    android:background="@drawable/bg_login">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline_left"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="24dp"/>


<android.support.constraint.Guideline
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/guideline_right"
    android:orientation="vertical"
    app:layout_constraintGuide_end="24dp"/>

<TextView
    android:id="@+id/iv_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SignUp"
    android:textSize="30dp"
    android:textStyle="bold"
    android:textColor="@color/white"
    app:layout_constraintEnd_toStartOf="@+id/guideline_right"
    app:layout_constraintStart_toEndOf="@+id/guideline_left"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toTopOf="parent"

    />

<EditText
    android:id="@+id/et_firstname"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/et_bg"
    android:hint="First Name"
    android:textColorHint="@color/login_form_details"
    android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
    android:drawablePadding="15dp"
    android:padding="16dp"
    app:layout_constraintStart_toStartOf="@id/guideline_left"
    app:layout_constraintEnd_toStartOf="@id/guideline_right"
    android:inputType="text"
    app:layout_constraintTop_toBottomOf="@+id/iv_icon"/>

<EditText
    android:id="@+id/et_middlename"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:background="@drawable/et_bg"
    android:hint="Middle Name"
    android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
    android:drawablePadding="15dp"
    android:textColorHint="@color/login_form_details"
    android:padding="16dp"
    app:layout_constraintStart_toStartOf="@id/guideline_left"
    app:layout_constraintEnd_toStartOf="@id/guideline_right"
    android:inputType="text"
    app:layout_constraintTop_toBottomOf="@+id/et_firstname"/>


    <EditText
        android:id="@+id/et_lastname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/et_bg"
        android:hint="Last Name"
        android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
        android:drawablePadding="15dp"
        android:textColorHint="@color/login_form_details"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/et_middlename"/>



    <EditText
        android:id="@+id/et_emailaddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:hint="Email Address"
        android:textColorHint="@color/login_form_details"
        android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
        android:drawablePadding="15dp"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/et_lastname"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:hint="Password"
        android:textColorHint="@color/login_form_details"
        android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
        android:drawablePadding="15dp"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/et_emailaddress"/>

    <EditText
        android:id="@+id/et_companyname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:hint="Company Name"
        android:textColorHint="@color/login_form_details"
        android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
        android:drawablePadding="15dp"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/et_password"/>


    <EditText
        android:id="@+id/et_contactnumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_bg"
        android:hint="Contact Number"
        android:textColorHint="@color/login_form_details"
        android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
        android:drawablePadding="15dp"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/et_companyname"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_register"
        android:layout_marginTop="16dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/login_form_details_medium"
        android:background="@drawable/btn_bg"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@+id/et_contactnumber"
        />





   <!-- <View
    android:id="@+id/footerline"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginBottom="50dp"
    android:background="#fff"
    app:layout_constraintBottom_toBottomOf="parent"
    />-->



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_signin"
    android:text="Already have an account.?       Login in"
    android:textColor="@color/login_form_details"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_register"
    android:layout_marginTop="16dp"
    />
    </android.support.constraint.ConstraintLayout>
</ScrollView>

