<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative12"
    android:layout_marginBottom="10dp"
    android:background="@color/Honeydew"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".SALES.invoice.AddNewInvoice">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                card_view:cardBackgroundColor="#FFFFFF"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/customernamet"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:text="Customer Name :-" />


                    <Spinner
                        android:id="@+id/customernames"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/customernamet"
                        android:gravity="center"
                        android:textAlignment="center"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/card_view"
                android:layout_centerHorizontal="true"
                card_view:cardBackgroundColor="#FFFFFF"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/termst"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:text="Terms :-" />


                    <Spinner
                        android:id="@+id/termss"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/termst"
                        android:gravity="center"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/invoicedatet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_below="@+id/termss"
                        android:textSize="17dp"
                        android:text="Invoice Date" />

                    <TextView
                        android:id="@+id/duedatet"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/termss"
                        android:gravity="end"
                        android:layout_marginRight="50dp"
                        android:layout_toRightOf="@+id/invoicedatet"
                        android:textSize="17dp"
                        android:text="Due Date" />

                    <EditText
                        android:id="@+id/invoicedatee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:editable="false"
                        android:layout_below="@+id/invoicedatet"
                        android:hint="(dd/mm/yyyy)" />

                    <EditText
                        android:id="@+id/duedatee"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="60dp"
                        android:layout_toRightOf="@+id/invoicedatee"
                        android:textStyle="bold"
                        android:editable="false"
                        android:layout_below="@+id/duedatet"
                        android:hint="(dd/mm/yyyy)" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="350dp"
                android:layout_height="210dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/card_view1"
                android:layout_centerHorizontal="true"
                card_view:cardBackgroundColor="#FFFFFF"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/emailt"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:text="Email id :-" />

                    <EditText
                        android:id="@+id/emaile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/emailt"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/emaile"
                        android:id="@+id/billingaddresst"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:text="Billing Address :-" />

                    <EditText
                        android:id="@+id/billingaddresse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/billingaddresst"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/placeofsupplyt"
                        android:layout_below="@id/billingaddresse"
                        android:textSize="17dp"
                        android:layout_marginLeft="20dp"
                        android:text="Place of Supply:-" />


                    <Spinner
                        android:id="@+id/placeofsupplys"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeofsupplyt"
                        android:gravity="center"
                        android:textAlignment="center"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/card_view2"
                android:layout_centerHorizontal="true"
                card_view:cardBackgroundColor="#FFFFFF"
                card_view:contentPadding="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview12"
                        android:text="TEXT"
                        android:textSize="20dp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="350dp"
            android:layout_height="510dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/card_view3"
            android:layout_centerHorizontal="true"
            card_view:cardBackgroundColor="#FFFFFF"
            card_view:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/placeofsupplyt1"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:text="Place of Supply:-" />

        </RelativeLayout>



        </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view4"
                android:text="new"/>

            <GridLayout
                android:id="@+id/mylayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:layout_below="@id/button12">

                <EditText
                    android:id="@+id/edittt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Item Name"
                    android:padding="20dp"
                    android:textColor="@color/black"/>

            </GridLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>